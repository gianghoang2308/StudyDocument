@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@model StudyDocument.Models.Category
<div class="container">
    <h4><strong>Thêm mới</strong></h4>

    <form asp-action="Create" asp-controller="Category" method="post" enctype="multipart/form-data">
        <div class="table-title" style="margin-top:20px">
            <div class="row">
                <div class="col-sm-6">
                    <h2 style="color:black"></h2>
                </div>
                <div class="col-sm-6">
                    <a class="btn btn-primary" asp-controller="Category" asp-action="Index"> <b>Quay lại</b> <i class='fas'>&#xf3e5;</i></a>
                    <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> <b>Lưu lại</b> </button>
                </div>
            </div>
        </div>
        <div class="form-group">
            <input type="hidden" class="form-control" asp-for="Id">
        </div>

        <div class="mb-3 mt-3">
            <label for="" class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name" placeholder="Thêm vào tên loại">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3 mt-3">
            <label for="" class="form-label">Title</label>
            <input type="text" class="form-control" asp-for="Title" placeholder="Enter Title">
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3 mt-3">
            <label for="" class="form-label">Descrtiption</label>
            <input type="text" class="form-control" asp-for="Descrtiption" placeholder="Enter Descrtiption">
            <span asp-validation-for="Descrtiption" class="text-danger"></span>

        </div>

        <div class="mb-3 mt-3">
            <label for="" class="form-label">Keyword</label>
            <input type="text" class="form-control" asp-for="Keyword" placeholder="Enter Keyword">
            <span asp-validation-for="Keyword" class="text-danger"></span>
        </div>

        <div class="mb-3 mt-3">
            <label asp-for="Status">Status</label>
            <select asp-for="Status" class="form-control">
                <option value="true" selected>Active</option>
                <option value="false">Inactive</option>
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>

        <div>
            <label for="" class="form-label">Image</label>
            <input type="file" class="form-control" asp-for="Image" placeholder="Enter Image" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>

        <!-- Nút gửi -->
        <div class="table-title" style="margin-top:20px">
            <div class="row">
                <div class="col-sm-6">
                    <h2 style="color:black"></h2>
                </div>
                <div class="col-sm-6">
                    <a class="btn btn-primary" asp-controller="Category" asp-action="Index"> Back <i class='fas'>&#xf3e5;</i></a>
                    <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Save </button>
                </div>>
            </div>
        </div>
    </form>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


