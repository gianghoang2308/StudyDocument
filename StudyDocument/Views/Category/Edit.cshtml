@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@model StudyDocument.Models.Category
<div class="container">
    <h4><strong> Edit </strong></h4>

    <form asp-action="Edit" asp-controller="Category" method="post" enctype="multipart/form-data">
        <div class="table-title" style="margin-top:20px">
            <div class="row">
                <div class="col-sm-6">
                    <h2 style="color:black"></h2>
                </div>
                <div class="col-sm-6">
                    <a class="btn btn-primary" asp-controller="Groupnews" asp-action="Index"> Back <i class='fas'>&#xf3e5;</i></a>
                    <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Save </button>
                </div>
            </div>
        </div>
        <div class="form-group">
            <input type="hidden" class="form-control" asp-for="Id">
        </div>

        <div class="mb-3 mt-3">
            <label for="" class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name" placeholder="Enter Name">
            <span asp-validation-for="Name" class="text-danger"></span>

        </div>

        <div class="mb-3 mt-3">
            <label for="" class="form-label">Title</label>
            <input type="text" class="form-control" asp-for="Title" placeholder="Enter Title">
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3 mt-3">
            <label for="" class="form-label">Description</label>
            <input type="text" class="form-control" asp-for="Descrtiption" placeholder="Enter Descrtiption">
            <span asp-validation-for="Descrtiption" class="text-danger"></span>
        </div>

        <div class="mb-3 mt-3">
            <label for="" class="form-label">Keyword</label>
            <input type="text" class="form-control" asp-for="Keyword" placeholder="Enter Keyword">
            <span asp-validation-for="Keyword" class="text-danger"></span>
        </div>

        <div class="mb-3 mt-3">
            <label asp-for="Status">Status</label>
            <select asp-for="Status" class="form-control">
                <option value="true" selected>Active</option>
                <option value="false">Inactive</option>
                <span asp-validation-for="Status" class="text-danger"></span>
            </select>
        </div>

        <div class="mb-3 mt-3">
            <label class="form-label">Image</label>
             <img src="~/images/@Model.Image" alt="Avatar" width="150" />
            <input type="hidden" asp-for="Image" />
            <input type="file" class="form-control" name="NewImage" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>

        <!-- Nút gửi -->
        <div class="table-title" style="margin-top:20px">
            <div class="row">
                <div class="col-sm-6">
                    <h2 style="color:black"></h2>
                </div>
                <div class="col-sm-6">
                    <a class="btn btn-primary" asp-controller="Category" asp-action="Index"> Back <i class='fas'>&#xf3e5;</i></a>
                    <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Save </button>
                </div>
            </div>
        </div>
    </form>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}



