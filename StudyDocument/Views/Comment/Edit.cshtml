@model StudyDocument.Models.Comment
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="container">
    <h4><strong> Chỉnh sửa</strong></h4>

    <form asp-action="Edit" asp-controller="Comment" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <div class="table-title" style="margin-top:20px">
            <div class="row">
                <div class="col-sm-6">
                    <h2 style="color:black"></h2>
                </div>
                <div class="col-sm-6">
                    <a class="btn btn-primary" asp-controller="Comment" asp-action="Index"> <b>Quay lại</b> <i class='fas'>&#xf3e5;</i></a>
                    <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> <b>Lưu lại</b> </button>
                </div>
            </div>
        </div>

        <!-- Hidden ID Field -->
        <div class="form-group">
            <input type="hidden" class="form-control" asp-for="Id">
        </div>

        <div class="form-group">
            <label asp-for="ImageId" class="control-label"><b>Tên ảnh</b></label>
            <select asp-for="ImageId" class="form-control">
                <option value="">--- Chọn ---</option>
                @foreach (var img in ViewBag.ImageList)
                {
                    <option value="@img.Id">@img.Name</option>
                }
            </select>
            <span asp-validation-for="ImageId" class="text-danger"></span>
        </div>


        <!-- Video Dropdown -->
        <div class="form-group">
            <label asp-for="VideoId" class="control-label"><b>Tên video</b></label>
            <select asp-for="VideoId" class="form-control">
                <option value="">--- Chọn ---</option>
                @foreach (var video in ViewBag.VideoList)
                {
                    <option value="@video.Id">@video.Description</option>
                }
                <span asp-validation-for="VideoId" class="text-danger"></span>
            </select>
        </div>

        <!-- Document Dropdown -->
        <div class="form-group">
            <label asp-for="DocumentId" class="control-label"><b>Tên tài liệu</b></label>
            <select asp-for="DocumentId" class="form-control">
                <option value="">--- Chọn ---</option>
                @foreach (var dcm in ViewBag.DocumentList)
                {
                    <option value="@dcm.Id">@dcm.Title</option>
                }
                <span asp-validation-for="DocumentId" class="text-danger"></span>
            </select>
        </div>

        <!-- User Dropdown -->
        <div class="form-group">
            <label asp-for="UserId" class="control-label"><b>User Name</b></label>
            <select asp-for="UserId" class="form-control">
                <option value="">--- Select ---</option>
                @foreach (var user in ViewBag.UserList)
                {
                    <option value="@user.Id">@user.FullName</option>
                }
                <span asp-validation-for="UserId" class="text-danger"></span>
            </select>
        </div>

        <!-- Message Input -->
        <div class="form-group">
            <label class="control-label"><b>Nội dung comment</b></label>
            <textarea type="text" class="form-control" asp-for="Message" placeholder="Nhập vào comment"></textarea>
            <span asp-validation-for="Message" class="text-danger"></span>
        </div>

        <!-- Buttons -->
        <div class="table-title" style="margin-top:20px">
            <div class="row">
                <div class="col-sm-6">
                    <h2 style="color:black"></h2>
                </div>
                <div class="col-sm-6">
                    <a class="btn btn-primary" asp-controller="Comment" asp-action="Index"> <b>Quay lại</b> <i class='fas'>&#xf3e5;</i></a>
                    <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> <b>Lưu lại</b> </button>
                </div>
            </div>
        </div>
    </form>
</div>
@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}



